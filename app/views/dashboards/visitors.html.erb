
    <div class="row"  style="margin-top:13%;">
      <div class="col-md-3">
      </div>
      <div class="col-md-6">
        
        <div id="custom-search-input" >
          <div class="input-group col-md-12">
            <%= text_field_tag :search,nil, autofocus: true,:id => "login-username", class: "form-control input-lg", placeholder: "Search by Product Name/ Catlog no." %>
            <span class="input-group-btn">
                        
                          
             <%= link_to '<i class="glyphicon glyphicon-search"></i>'.html_safe, product_list_path, id: "search_product", class: "btn btn-info btn-lg"%>                
                        
            </span>
          </div>
        </div>
      </div>
    </div>


<script type="text/javascript">
href = $('#search_product').attr('href')
  $('#login-username').keyup(function(){
     value = $('#login-username').val()
     $('#search_product').attr('href', href+"?search="+value) 
  });

   $(document).on("keyup", function (event) {

        if (event.which == 13) {
          var my_target_url = $('#search_product').attr('href'); //Figures out where your link goes...
          $(location).attr('href', my_target_url)
          // window.location = my_target_url();
        }
    });

</script>
  

