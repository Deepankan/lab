<%= form_tag contact_detail_path, :enctype =>"multipart/form-data" do |f| %>
<div class="container">
	<div class="row">
 		<div class="col-lg-12 col-xs-12 col-sm-12">
 			<h3 style="color:#00BFFF;">Contact Us &nbsp;<small>STOP BY ANYTIME</small></h3> 

 			<hr style="border-color:#00BFFF;">
 		</div>
 	</div>
	<div class="row">
		<div class="col-lg-12">
 			<%= text_field_tag :name, nil, :class => "form-control input-lg", value: "", placeholder: "Name" %> 
 		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
 			<%= text_field_tag :email, nil, :class => "form-control input-lg", value: "", placeholder: "Email" %> 
 		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
 			
 			<%= text_field_tag :website_url, nil, :class => "form-control input-lg", value: "", placeholder: "Website url" %> 
 		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
		    <%= text_area_tag :comment, nil, :class => "form-control input-lg", value: "", placeholder: "Comment" %> 
 			
 		</div>
	</div>
	<br>
	<div class="row">
		<div class="col-lg-12">
			
			<%= submit_tag "Submit", :class => "btn btn-primary btn-lg", style: "width: 100%"%>
		</div>
	</div>
	<br />
	<br />
	<div class="row">
		<div class="col-lg-12">
			<center></center>
		</div>
	</div>
	<div class="row">
		<center>
			<strong style="font-size:23px;"></strong>
			<br>
			<small style="font-size:18px;"></small>
		</center>
	</div>

</div>
<br />

<%end%>

                             		
