
 <div class="container">
  <div class="row">
    <div class="col-lg-12 col-xs-12 col-sm-12">
      <h3 style="color:#00BFFF;">Show PRODUCT <hr style="border-color:#00BFFF;"></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
          <div class="label_new">
            <span class="labelText"><strong>Name</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">
    
       <%= text_field_tag :product_name,@product.product_name, autocomplete: "off",id: "productName", placeholder: "Product Name" ,class: "form-control", disabled: true%>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Code</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">
      
      <%= text_field_tag :product_code,@product.product_code, autocomplete: "off",id: "productCode", placeholder: "e.g.1227HGTSG12364",class: "form-control", disabled: true %>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Formula</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">

      <%= text_field_tag :formula,@product.formula, autocomplete: "off", id: "formula", placeholder: "e.g.CN-CN-C-C-HO" ,class: "form-control", disabled: true%>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Molar Mass</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">
 
      <%= text_field_tag :molar_mass,@product.molar_mass, autocomplete: "off", id: "molarMass", placeholder: "Molecular Weight g/mol",class: "form-control", disabled: true  %>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Grade</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">
     
      <%= text_field_tag :grade,@product.grade, autocomplete: "off", id: "grade", placeholder: "e.g.122NGDS" ,class: "form-control", disabled: true%>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Package</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">

      <%= text_field_tag :pakaging,@product.pakaging, autocomplete: "off", id: "package", placeholder: "e.g.543.21mg",class: "form-control" , disabled: true%>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div> 

  <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Price</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-8 col-sm-8 inputSizing">

       <%= text_field_tag :price,@product.price, id: "price", placeholder: "&#x20b9; 00.00",class: "form-control", disabled: true %>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0">
    </div>
  </div>  

 <div class="row">
    <div class="col-lg-2 col-xs-4 col-sm-4 col-md-4 labelDiv">
            <div class="label_new">
            <span class="labelText"><strong>Preview</strong></span>
          </div>

    </div>
    <div class="col-lg-6 col-xs-4 col-sm-6 col-md-6 inputSizing">
       <% if @product.chemical_images.present?%>
	        <% @product.chemical_images.each do |k|%>
	        <%= image_tag k.thumb.url%>
	      <%end %>
      <%else%>
     <label> Sorry No Preview Available</label>
      <%end%>
     
    </div>
<!--     <div class="col-lg-4 col-xs-4 col-sm-2 col-md-2 inputSizing">
      <button class="btn btn-default" style"margin-left:5%;"><strong>Upload Image</strong></button>
    </div> -->
  </div>


  <div class="row">
    
    <div class="col-lg-8 col-xs-12 col-sm-12 col-md-12 labelDiv">
      <center>
<!--       <button class="btn btn-primary"><strong>Save</strong></button> -->
<%if @role != ADMIN%>
<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-primary" %> 
<%end%>
    <!--   <button class="btn btn-default " style="margin-left:5px;"><strong>Cancel</strong></button> -->

<%= link_to "Back", :back,class: "btn btn-default", style: "margin-left:5px;" %>
      </center>
    </div>
    <div class="col-lg-4 col-xs-0 col-sm-0 col-md-0"></div>
  </div>

 </div>










