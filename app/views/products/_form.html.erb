      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <%end%>
         <div class="field">
    <%= f.label :product_name %><br />
    <%= f.text_field :product_name, autocomplete: "off" %>
  </div>
   <div class="field">
    <%= f.label :product_code %><br />
    <%= f.text_field :product_code, autocomplete: "off" %>
  </div>
     <div class="field">
    <%= f.label :grade %><br />
    <%= f.text_field :grade, autocomplete: "off" %>
  </div>
     <div class="field">
    <%= f.label :formula %><br />
    <%= f.text_field :formula, autocomplete: "off" %>
  </div>
     <div class="field">
    <%= f.label :molar_mass %><br />
    <%= f.text_field :molar_mass, autocomplete: "off" %>
  </div>
       <div class="field">
    <%= f.label :image %><br />
    <%if @product.image_url.present?%>
      <%= image_tag @product_detail.image_url%>
    <%else%>

        <% @product.chemical_images.each do |k|%>
        <%= image_tag k.thumb.url%>
      <%end if @product.chemical_images%>
    <%end%>
    <%= f.file_field :chemical_images,  multiple: true %>
