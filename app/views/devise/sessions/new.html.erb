 <div class="container">

   <div class="row">
   <div class="col-lg-4">
      
   </div>
   <div class="col-lg-4 loginForm">
      <%= form_for(resource, as: resource_name,:class => "form-vertical push-right",:id => "loginform", url: session_path(resource_name)) do |f| %>
      <div class="input-group username">
         <span class="input-group-addon">
         <i class="glyphicon glyphicon-user"></i></span>
         <%= f.email_field :email, autofocus: true,:id => "login-username", class: "form-control input-lg", placeholder: "Email" %>
      </div>
      <div style="margin-bottom: 25px" class="input-group">
         <span class="input-group-addon">
         <i class="glyphicon glyphicon-lock"></i></span>
         <%= f.password_field :password, autocomplete: "off",:id => "login-password", class: "form-control input-lg", placeholder: "Password" %>
      </div>
      <div class="row">
         <div class=" col-lg-4 remember">
            <label>
               <strong>
                  <!--  <input id="login-remember" type="checkbox" name="remember" value="1"> -->  <%= f.check_box :remember_me, :id => "login-remember" %><span style="color:#111; ">Remember me</span>
               </strong>
            </label>
         </div>
          <div class=" col-lg-4  forgot"></div>
         <div class=" col-lg-4  forgot">
         <label>
            <strong><%= link_to "Forgot password?", new_password_path(resource_name),class: "pull-right", style: "color:#111;" %></strong> 
            </label> 
         </div>
      </div>
 
      <%= f.submit "LOGIN", class: "btn btn-primary col-lg-12 btn-lg loginBtn" %>
      <%end%>
   </div>
   </div>
</div>   

