
 <div class="container">

   <div class="row">
   <div class="col-lg-4">
      
   </div>
   <div class="col-lg-4 loginForm">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
      <div class="input-group username">
         <span class="input-group-addon">
         <i class="glyphicon glyphicon-user"></i></span>
         <%= f.email_field :email, autofocus: true,:id => "login-username", class: "form-control input-lg", placeholder: "Email" %>
      </div>
     
      <%= f.submit "Send me reset password instructions", class: "btn btn-primary col-lg-12 btn-lg loginBtn" %>
      <%end%>
   </div>
   </div>
</div>   

